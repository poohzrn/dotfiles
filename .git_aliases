#_GitAliases_#
alias pull='git pull'
alias push='git push'
alias st='git status -s'
alias d='git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat'
alias ca='git add -A && git commit -av'
alias go='git checkout -b $1 2> /dev/null || git checkout $1'
alias lo='shortlog --summary --numbered'
